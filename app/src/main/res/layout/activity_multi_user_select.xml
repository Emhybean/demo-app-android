<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        >

    <io.rong.imkit.veiw.ActionBar
            android:id="@+id/mutil_user_select_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_to_dip_96"/>

    <RelativeLayout android:layout_marginTop="@dimen/px_to_dip_96"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <io.rong.imkit.veiw.PinnedHeaderListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:scrollingCache="false"/>


        <io.rong.imkit.veiw.SwitchGroup
                android:layout_gravity="right"
                android:id="@+id/swithch_group"
                android:layout_width="@dimen/px_to_dip_50"
                android:layout_alignParentRight="true"
                app:orientation="vertical"
                app:pinned_item="@layout/view_pinned_item"
                app:pinned_item_array="@array/search_letters"
                android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>